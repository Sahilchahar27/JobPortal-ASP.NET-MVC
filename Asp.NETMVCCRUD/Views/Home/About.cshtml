
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<style>
    /* Reset and common styles */
body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Hero section */
.
/* About section */
.about-section {
    padding: 80px 0;
}

.about-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.about-text {
    flex: 1;
    padding-right: 40px;
}

.about-text h2 {
    font-size: 36px;
    margin-bottom: 20px;
}

.about-text p {
    font-size: 18px;
    line-height: 1.6;
    margin-bottom: 20px;
}

.about-image {
    flex: 1;
}

.about-image img {
    max-width: 100%;
    height: auto;
}

/* Values section */
.values-section {
    background-color: #f8f8f8;
    padding: 80px 0;
}

.values-section h2 {
    font-size: 36px;
    text-align: center;
    margin-bottom: 40px;
}

.values-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 40px;
}

.value-item {
    text-align: center;
}

.value-item i {
    font-size: 48px;
    color: #09867e;
    margin-bottom: 20px;
}

.value-item h3 {
    font-size: 24px;
    margin-bottom: 10px;
}

.value-item p {
    font-size: 16px;
    line-height: 1.6;
}



</style>
<body >
    
    <div style="padding: 100px; ">
    <main>
        <section class="hero">
            <div class="hero-content">
                <h1><b>About Us</b></h1>
               
            </div>
        </section>

        <section class="about-section">
            <div class="container">
                <div class="about-content">
                    <div class="about-text">
                       
                        <p style="color: #09867e"><b><i>At Job Portal, we are dedicated to helping professionals find exciting opportunities and build their careers. Our platform connects talented individuals with top employers, providing a seamless job search experience.</i></b></p>
                        <p style="color: #09867e"><b><i>Founded in 2010, our mission has been to simplify the job search process and empower job seekers with the right tools and resources. We believe that every individual deserves a fulfilling career, and we strive to make that a reality.</i></b></p>
                    </div>
                    <div class="about-image">
                        <img src="https://media.licdn.com/dms/image/D5612AQFZP6YBd9MnMQ/article-cover_image-shrink_720_1280/0/1703047751593?e=2147483647&v=beta&t=Baqw6B_TdnKKYy_VaKWyNMYvUEIEszygqWsUzBC3_Zo" alt="About Image">
                    </div>
                </div>
            </div>
        </section>

        <section class="values-section">
            <div class="container">
                <h2>Our Values</h2>
                <div class="values-grid">
                    <div class="value-item">
                        <i class="fas fa-handshake"></i>
                        <h3>Trust</h3>
                        <p>We value honesty, transparency, and building lasting relationships with our clients and job seekers.</p>
                    </div>
                    <div class="value-item">
                        <i class="fas fa-user-friends"></i>
                        <h3>Inclusivity</h3>
                        <p>We embrace diversity and strive to create an inclusive environment for all individuals, regardless of their background.</p>
                    </div>
                    <div class="value-item">
                        <i class="fas fa-chart-line"></i>
                        <h3>Innovation</h3>
                        <p>We continuously innovate and adapt to stay ahead of the curve, providing cutting-edge solutions for job seekers and employers.</p>
                    </div>
                </div>
            </div>
        </section>
    </main>

  </div>
</body>


